{
  "data": {
        "d-topics-table":{
            "label": "Table of topics",
            "data_class": "table",
            "param": ["p-file"],
            "file_name": "topics"
        },
        "d-gen-text":{
            "label": "Text file",
            "data_class": "text",
            "param": ["p-file"],
            "file_name": "doc"
        },
        "d-coherence":{
            "label": "Topic coherence value",
            "data_class": "text",
            "param": ["p-file"],
            "file_name": "coherence"
        },
        "d-stopwords":{
            "label": "List of stopwords",
            "data_class": "table",
            "param": ["p-file"],
            "file_name": "stopwords"
        }
  },
  "tool": {
        "t-topic-lda": {
            "label": "Topic modeling with LDA",
            "function": "lda",
            "param": ["p-topic","p-numwords","p-defstopwords"],
            "compatible_input": ["d-gen-text","d-stopwords"],
            "output": ["d-topics-table","d-coherence"]
        },
        "t-chart-bar": {
            "label": "Bar chart",
            "function": "bar_chart",
            "param": ["p-log"],
            "compatible_input": ["d-topics-table"]
        },
        "t-filter-text": {
            "label": "Filter the text",
            "function": "filter_text",
            "param": ["p-filteropt","p-filterregex"],
            "compatible_input": ["d-gen-text"],
            "output": ["d-gen-text"]
        },
        "t-save-files": {
            "label": "Save",
            "function": "save_file",
            "compatible_input": ["d-gen-text","d-topics-table","d-coherence"]
        }
  },
  "param": {
        "p-file":{
          "handler": "select-file",
          "label": "File/s or Directory",
          "value": {},
          "init_value": {}
        },
        "p-log":{
          "handler": "switch-value",
          "label": "Log scale",
          "value_label": ["True","False"],
          "value": [0,1],
          "init_value": 0
        },
        "p-topic":{
          "handler": "input-text",
          "label": "Number of topics",
          "value": "2",
          "init_value": 2
        },
        "p-numwords":{
          "handler": "select-value",
          "label": "Number of words",
          "value_label": ["10","15","20","25","30","40","50"],
          "value": [10,15,20,25,30,40,50],
          "init_value": 10
        },
        "p-filteropt":{
          "handler": "check-value",
          "label": "Filter and remove:",
          "value_label": ["Dates","Footnotes"],
          "value": ["dates","footnotes"],
          "init_value": ["dates"]
        },
        "p-filterregex":{
          "handler": "input-text",
          "label": "Specific text <p> (Regular expressions supported) </p>",
          "value": "",
          "init_value": ""
        },
        "p-defstopwords":{
          "handler": "select-value",
          "label": "Stopwwords language",
          "value_label": ["None","Arabic","Azerbaijani","Danish","Dutch","English","Finnish","French","German","Greek","Hungarian","Indonesian","Italian","Kazakh","Nepali","Norwegian","Portuguese","Romanian","Russian","Spanish","Swedish","Turkish"],
          "value": ["none","arabic","azerbaijani","danish","dutch","english","finnish","french","german","greek","hungarian","indonesian","italian","kazakh","nepali","norwegian","portuguese","romanian","russian","spanish","swedish","turkish"],
          "init_value": "none"
        }
  }
}
